                Orientation="Horizontal" 
                HorizontalAlignment="Right" 
                Margin="5">

                    <Button Content="{Binding ButtonOKText}" 
                        Height="24"
                        MinWidth="80"
                        Margin="10,0,0,0"
                        Padding="10,0"
