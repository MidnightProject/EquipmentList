<UserControl x:Class="EquipmentList.View.Employee"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:EquipmentList.View"
             xmlns:converters="clr-namespace:EquipmentList.Converters"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <UserControl.Resources>
        <converters:DataTableColumnToTextConverter x:Key="columnTextConverter" />

        <Style x:Key="EmptyTextBlock" TargetType="TextBlock">
            <Style.Triggers>
                <Trigger Property="Text" Value="{x:Null}">
                    <Setter Property="Visibility" Value="Collapsed" />
                </Trigger>
                <Trigger Property="Text" Value="">
                    <Setter Property="Visibility" Value="Collapsed" />
                </Trigger>
            </Style.Triggers>
        </Style>
    </UserControl.Resources>
    <Grid>
        <DataGrid ItemsSource="{Binding EmployeeTable}" SelectedIndex="{Binding SelectedIndex}" IsReadOnly="True" SelectionMode="Single" AutoGenerateColumns="False" RowDetailsVisibilityMode="VisibleWhenSelected">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Name" Binding="{Binding NAME}" />
                <DataGridTextColumn Header="Phone" Binding="{Binding PHONE}" />
                <DataGridTextColumn Header="Email" Binding="{Binding EMAIL}" />
                <DataGridTextColumn Header="Building" Binding="{Binding BUILDING}" />
                <DataGridTextColumn Header="Room" Binding="{Binding ROOM}" />
            </DataGrid.Columns>
            <DataGrid.RowDetailsTemplate>
                <DataTemplate>
                    <StackPanel Margin="10" >
                        <TextBlock Text="Building:" FontWeight="Bold" />
                        <TextBlock Margin="10,5,0,5" Style="{StaticResource EmptyTextBlock}">
                            <TextBlock.Text>
                                    <MultiBinding Converter="{StaticResource columnTextConverter}" ConverterParameter="ADDRESS">
                                        <Binding RelativeSource="{RelativeSource FindAncestor, AncestorType=DataGrid}" Path="DataContext.EmployeeTable"/>
                                        <Binding RelativeSource="{RelativeSource FindAncestor, AncestorType=DataGrid}" Path="DataContext.SelectedIndex"/>
                                    </MultiBinding>
                                </TextBlock.Text>
                            </TextBlock>
                        <WrapPanel Margin="10,5,0,5">
                            <TextBlock Style="{StaticResource EmptyTextBlock}">
                                <TextBlock.Text>
                                    <MultiBinding Converter="{StaticResource columnTextConverter}" ConverterParameter="POSTCODE">
                                        <Binding RelativeSource="{RelativeSource FindAncestor, AncestorType=DataGrid}" Path="DataContext.EmployeeTable"/>
                                        <Binding RelativeSource="{RelativeSource FindAncestor, AncestorType=DataGrid}" Path="DataContext.SelectedIndex"/>
                                    </MultiBinding>
                                </TextBlock.Text>
                            </TextBlock>
                            <TextBlock Text=" "></TextBlock>
                            <TextBlock Style="{StaticResource EmptyTextBlock}">
                                <TextBlock.Text>
                                    <MultiBinding Converter="{StaticResource columnTextConverter}" ConverterParameter="CITY">
                                        <Binding RelativeSource="{RelativeSource FindAncestor, AncestorType=DataGrid}" Path="DataContext.EmployeeTable"/>
                                        <Binding RelativeSource="{RelativeSource FindAncestor, AncestorType=DataGrid}" Path="DataContext.SelectedIndex"/>
                                    </MultiBinding>
                                </TextBlock.Text>
                            </TextBlock>
                        </WrapPanel>
                        <TextBlock Margin="10,5,0,5" Style="{StaticResource EmptyTextBlock}">
                            <TextBlock.Text>
                                <MultiBinding Converter="{StaticResource columnTextConverter}" ConverterParameter="COUNTRY">
                                    <Binding RelativeSource="{RelativeSource FindAncestor, AncestorType=DataGrid}" Path="DataContext.EmployeeTable"/>
                                    <Binding RelativeSource="{RelativeSource FindAncestor, AncestorType=DataGrid}" Path="DataContext.SelectedIndex"/>
                                </MultiBinding>
                            </TextBlock.Text>
                        </TextBlock>
                    </StackPanel>
                </DataTemplate>
            </DataGrid.RowDetailsTemplate>
        </DataGrid>
    </Grid>
</UserControl>
